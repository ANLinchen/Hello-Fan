<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LearnWritingActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="horizontal">

        <com.test.view.HeightAdaptImageView
            android:id="@+id/imageview_simplified"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingRight="8dp"/>

        <com.test.view.HeightAdaptImageView
            android:id="@+id/imageview_traditional"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"/>

    </LinearLayout>

    <com.test.view.HanziView
        android:id="@+id/hanzi_view1"
        android:layout_width="50dp"
        android:layout_height="wrap_content" />

    <com.test.view.HanziView
        android:id="@+id/hanzi_view2"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />

    <com.test.view.HanziView
        android:id="@+id/hanzi_view"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_clean"
            android:text="@string/button_clean"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="click"/>

        <Button
            android:id="@+id/button_next"
            android:text="@string/button_next"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="click"/>

        <Button
            android:id="@+id/button_prompt"
            android:text="提示"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="click"/>

    </LinearLayout>

</LinearLayout>